<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.textfield.*?>

<VBox prefHeight="270.0" prefWidth="565.0" style="-fx-background-color: #181818; -fx-background-radius: 8;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lordscave.hotel_lord.Controllers.LoginController">

   <HBox fx:id="titleBar" prefHeight="50.0">
      <ImageView fx:id="appIcon" fitHeight="18" fitWidth="18">
         <HBox.margin><Insets top="5.0" /></HBox.margin>
      </ImageView>
      <Region HBox.hgrow="ALWAYS" />
      <Label style="-fx-font-size: 20px; -fx-text-fill: linear-gradient(to right, #6A11CB, #2575FC);" text="Hotel LORD" />
      <Region HBox.hgrow="ALWAYS" />
      <Button fx:id="closeBtn" onAction="#closeWindow" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 5px;" text="❌" />
   </HBox>

   <VBox prefHeight="60.0" prefWidth="549.0">
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="User Name :" textFill="WHITE" />
      <CustomTextField fx:id="userFieldL" prefHeight="30.0" prefWidth="545.0" style="-fx-background-radius: 5; -fx-background-color: #212121; -fx-text-fill: #B0B0B0; -fx-prompt-text-fill: #808080; -fx-font-size: 16;" />
      <VBox.margin><Insets top="10.0" /></VBox.margin>
   </VBox>

   <VBox prefHeight="60.0" prefWidth="549.0">
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Password :" textFill="WHITE" />
      <CustomPasswordField fx:id="passFieldL" prefHeight="30.0" prefWidth="545.0" style="-fx-background-radius: 5; -fx-background-color: #212121; -fx-text-fill: #B0B0B0; -fx-prompt-text-fill: #808080; -fx-font-size: 16;" />
      <VBox.margin><Insets bottom="20.0" top="10.0" /></VBox.margin>
   </VBox>

   <Button onAction="#logingIn" prefHeight="30.0" prefWidth="549.0" style="-fx-background-color: linear-gradient(to right, #6A11CB, #2575FC); -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Login" />

   <Hyperlink onAction="#forgotPass" style="-fx-text-fill: #1e69e3; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-border-color: transparent;" text="Forgot password?" />
   <VBox.margin><Insets bottom="20.0" /></VBox.margin>
   <VBox.margin><Insets bottom="5.0" /></VBox.margin>

   <padding><Insets bottom="8.0" left="10.0" right="10.0" top="8.0" /></padding>

</VBox>
