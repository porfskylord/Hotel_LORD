<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="720.0" prefWidth="1300.0" style="-fx-background-radius: 10; -fx-background-color: #121212;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lordscave.hotel_lord.MainWindowController">

    <!-- Top Bar with Toggle Button -->
    <top>
        <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" prefWidth="1300.0" spacing="10">
            <Button fx:id="toggleButton" minHeight="-Infinity" onAction="#toggleSidebar" prefHeight="25.0" prefWidth="46.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="☰">
            <font>
               <Font size="14.0" />
            </font>
            <HBox.margin>
               <Insets bottom="5.0" />
            </HBox.margin>
            <padding>
               <Insets bottom="4.0" />
            </padding></Button>
            <Region HBox.hgrow="ALWAYS" />
         <Label prefHeight="30.0" prefWidth="134.0" text="Hotel LORD">
            <font>
               <Font name="Yu Gothic UI Semibold" size="20.0" />
            </font>
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.4156862795352936" green="0.06666667014360428" blue="0.7960784435272217" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="0.1469999998807907" green="0.46631667017936707" blue="0.9800000190734863" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill>
         </Label>
            <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="closebtn" minHeight="-Infinity" onAction="#closeWindow" prefHeight="25.0" prefWidth="46.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="❌">
            <font>
               <Font size="14.0" />
            </font>
            <padding>
               <Insets bottom="4.0" />
            </padding>
         </Button>
         <padding>
            <Insets top="4.0" />
         </padding>
        </HBox>
    </top>

    <!-- Sidebar Menu -->
    <left>
        <VBox fx:id="menuContainer" spacing="10" prefWidth="200" style="-fx-padding: 10px; -fx-background-radius: 0 0 0 10px;">
        </VBox>
    </left>

    <!-- Main Content -->
    <center>

    </center>

</BorderPane>
